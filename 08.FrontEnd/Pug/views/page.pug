html
   head
   body
      h1 Pug Document Struct!

      div
         p unordered list
         ul
            li item1
            li item2

      h2= 'Writing Pug Code'

      - const title = 'Pug Example'
      - const message = 'Hello Pug'
      h3= title
      div #{message} 

      h3 For Loop
      ul
      - for(var i = 0 ; i < 10 ; i++ ) {
         li= i
      - }

      h3 Attribute
      a(href="http://google.com") google
      img(src="http://www.ibiblio.org/wm/paint/auth/munch/munch.scream.jpg" height="100px")

      h3 Interpolation

      - var strVal = 'Hello <strong>World</strong>'
      div escaped. : #{strVal}
      div unescaped. : !{strVal}

      - var strVal2 = 'Hello World<strong>!</strong>!'
      div!= strVal2
         
      div= 'Hello <strong>World</strong>'
      div!= 'Unecsaped <strong>String</strong>'

      h3 Condition Execute

      - var val = true
      if ( val ) 
         div val is True
      else
         div val is False
            
      h3 Loop with Each
      - var array = ['First', 'Second', 'Third']
      ul
         each item, index in array
            li #{index} : #{item}      
         
      - var i = 0
      ul   
         while i < 4
            li item #{i++}
